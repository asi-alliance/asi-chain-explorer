# ASI Chain Indexer Environment Configuration
# Copy this file to .env and fill in your values

# Node Configuration
NODE_HOST=localhost
GRPC_PORT=40402
HTTP_PORT=40403

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/asi_indexer
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Hasura Configuration
HASURA_ENDPOINT=http://localhost:8080
HASURA_ADMIN_SECRET=your_hasura_admin_secret_here

# Indexing Configuration
SYNC_INTERVAL=5
BATCH_SIZE=100
START_BLOCK_HEIGHT=0
MAX_RETRIES=3
RETRY_DELAY=5

# Monitoring
MONITORING_ENABLED=true
MONITORING_PORT=9090
METRICS_PREFIX=asi_indexer

# Rust CLI Path
RUST_CLI_PATH=/usr/local/bin/node_cli

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/asi-indexer/indexer.log

# Performance
ENABLE_CACHING=true
CACHE_TTL=300
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Security
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/indexer.crt
SSL_KEY_PATH=/etc/ssl/private/indexer.key