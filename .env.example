# GraphQL Endpoints
REACT_APP_GRAPHQL_URL=http://localhost:8080/v1/graphql
REACT_APP_GRAPHQL_WS_URL=ws://localhost:8080/v1/graphql

# Indexer API Endpoint
REACT_APP_INDEXER_API_URL=http://localhost:9090

# Hasura Admin Secret (REQUIRED for production server)
# WARNING: This should ideally be handled by a backend proxy service
# Never expose this in public/client-side code in production
REACT_APP_HASURA_ADMIN_SECRET=

# Authentication (if using JWT instead of admin secret)
REACT_APP_AUTH_TOKEN=

# Network Configuration
REACT_APP_NETWORK_NAME=ASI Chain
REACT_APP_NETWORK_ID=asi-mainnet

# Feature Flags
REACT_APP_ENABLE_WEBSOCKETS=true
REACT_APP_ENABLE_POLLING=true
REACT_APP_POLLING_INTERVAL=5000

# API Rate Limiting
REACT_APP_MAX_RETRIES=3
REACT_APP_RETRY_DELAY=1000

# Display Configuration
REACT_APP_BLOCKS_PER_PAGE=20
REACT_APP_TRANSACTIONS_PER_PAGE=50
REACT_APP_DATE_FORMAT=relative

# Debug Mode
REACT_APP_DEBUG_MODE=false

# Deprecated
REACT_APP_RCHAIN_NODE_URL=
RCHAIN_NODE_URL=